@keyframes fadeIn
  0%
    opacity: 0

  100%
    opacity: 1

@keyframes fadeInDown
  0%
    opacity: 0
    transform: translateY(-20px)

  100%
    opacity: 1
    transform: translateY(0)

@keyframes fadeOut
  0%
    opacity: 1

  100%
    opacity: 0

@keyframes fadeOutUp
  0%
    opacity: 1
    transform: translateY(0)

  100%
    opacity: 0
    transform: translateY(-20px)

.fadeOutUp
  animation-name: fadeOutUp
  animation-duration: 1s
  animation-fill-mode: both
