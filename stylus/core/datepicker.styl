.ui-datepicker
	width 216px
	height auto
	margin 5px auto 0
	font-family 'bebas_neueregular'
	font-size 9pt
	box-shadow 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important

	a
		text-decoration none

	table
		width 100%

	thead
		background-linear-gradient(top, $grey-97, 0%, $grey-97f, 0%)
		border-bottom 1px solid $grey-1

	th
		text-align center
		text-transform uppercase
		font-size 8pt
		padding 5px 0
		color $orange
		text-shadow 1px 0px 0px $white

	tbody

		td
			padding 0
			border-right 1px solid $grey-1

			&:last-child
				border-right 0px

		tr
			border-bottom 1px solid $grey-1

			&:last-child
				border-bottom 0px

	td

		span
		a
			display inline-block
			font-weight bold
			text-align center
			width 30px
			height 30px
			line-height 30px
			color $grey-40
			text-shadow 1px 1px 0px $white

.ui-datepicker-header
	color $white
	background-color $blue
	font-weight 700
	box-shadow inset 0px 1px 1px 0px rgba($white, 0.2)
	text-shadow 1px -1px 0px $black
	line-height 30px
	border-width 1px 0 0 0
	border-style solid
	border-color rgba($light-blue, 0.5)

.ui-datepicker-title
	text-align center

.ui-datepicker-prev
.ui-datepicker-next
	position relative
	display inline-block
	width 30px
	height 30px
	text-align center
	cursor pointer
	line-height 600%
	overflow hidden

	&:after
		content ""
		position absolute
		top calc(30px * 23.33 / 100)
		left calc(30px * 23.33 / 100)
		width calc(25.981px * 53.33 / 100)
		height calc(30px * 53.33 / 100)
		border-top solid calc(15px * 53.33 / 100) transparent
		border-bottom solid calc(15px * 53.33 / 100) transparent
		transition all 0.3s

.ui-datepicker-prev
	float left
	background-position center -30px

	&:after
		border-right solid calc(25.981px * 53.33 / 100) $white

	&:hover
	&:focus

		&:after
			border-right-color $orange

.ui-datepicker-next
	float right
	background-position center 0px

	&:after
		border-left solid calc(25.981px * 53.33 / 100) $white

	&:hover
	&:focus

		&:after
			border-left-color $orange

.ui-datepicker-calendar

	.ui-state-default
		box-shadow inset 1px 1px 0px 0px rgba($white, 0.5)
		background-linear-gradient(top, $grey-93, 0%, $grey-87, 0%)

	.ui-state-hover
		background $orange
		box-shadow inset 1px 1px 0px 0px rgba($grey-40, 0.5)
		text-shadow 0px 1px 0px $black
		color $white

	.ui-state-active
		background $blue
		box-shadow inset 0px 0px 10px 0px rgba($black, 0.1)
		color $white
		text-shadow 0px 1px 0px $black
		border 1px solid $light-blue
		position relative

	td

		&:first-child

			.ui-state-active
				width 29px
				margin-left 0

		&:last-child

			.ui-state-active
				width 29px
				margin-right 0

	tr

		&:last-child

			.ui-state-active
				height 29px
				margin-bottom 0

.ui-datepicker-unselectable

	.ui-state-default
		background $grey-2
		color $grey-3
