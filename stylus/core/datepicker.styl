.ui-datepicker
	width 216px
	height auto
	left 380px !important
	top 270px !important
	margin 5px auto 0
	font 9pt Arial, sans-serif
	box-shadow 0px 0px 10px 0px rgba($black, 0.5)
	
	a
		text-decoration none
		
	table
		width 100%
		
	thead
		background-linear-gradient(top, #f7f7f7, 0%, #f1f1f1, 0%)
		border-bottom 1px solid #bbb
		
	th
		text-transform uppercase
		font-size 6pt
		padding 5px 0
		color #666666
		text-shadow 1px 0px 0px #fff
		
	tbody
		
		td
			padding 0
			border-right 1px solid #bbb
			
			&:last-child
				border-right 0px
				
		tr
			border-bottom 1px solid #bbb
			
			&:last-child
				border-bottom 0px
				
	td
	
		span
		a
			display inline-block
			font-weight bold
			text-align center
			width 30px
			height 30px
			line-height 30px
			color #666666
			text-shadow 1px 1px 0px #fff

.ui-datepicker-header
	color #e0e0e0
	font-weight 700
	box-shadow inset 0px 1px 1px 0px rgba($white, 0.2)
	text-shadow 1px -1px 0px $black
	line-height 30px
	border-width 1px 0 0 0
	border-style solid
	border-color $white

.ui-datepicker-title
	text-align center
	
.ui-datepicker-prev
.ui-datepicker-next
	display inline-block
	width 30px
	height 30px
	text-align center
	cursor pointer
	background-image url('../img/arrow.png')
	background-repeat no-repeat
	line-height 600%
	overflow hidden
	
.ui-datepicker-prev
	float left
	background-position center -30px

.ui-datepicker-next
	float right
	background-position center 0px
	
.ui-datepicker-calendar

	.ui-state-default
		box-shadow inset 1px 1px 0px 0px rgba(250, 250, 250, .5)
		background-linear-gradient(top, #ededed, 0%, #dedede, 0%)
		
	.ui-state-hover
		background #f7f7f7
		
	.ui-state-active
		background #6eafbf
		box-shadow inset 0px 0px 10px 0px rgba(0, 0, 0, 0.1)
		color #e0e0e0
		text-shadow 0px 1px 0px #4d7a85
		border 1px solid #55838f
		position relative
		margin -1px
		
	td
		
		&:first-child
			
			.ui-state-active
				width 29px
				margin-left 0
				
		&:last-child
			
			.ui-state-active
				width 29px
				margin-right 0
				
	tr
		
		&:last-child
			
			.ui-state-active
				height 29px
				margin-bottom 0
		
.ui-datepicker-unselectable
	
	.ui-state-default
		background #f4f4f4
		color #b4b3b3