.ui-datepicker
	width 216px
	height auto
	margin 5px auto 0
	font 9pt Arial, sans-serif
	box-shadow 0px 0px 10px 0px rgba($black, 0.5)
	
	a
		text-decoration none
		
	table
		width 100%
		
.ui-datepicker-header
	color #e0e0e0
	font-weight 700
	box-shadow inset 0px 1px 1px 0px rgba($white, 0.2)
	text-shadow 1px -1px 0px $black
	line-height 30px
	border-width 1px 0 0 0
	border-style solid
	border-color $white

.ui-datepicker-title
	text-align center