.modal
	display none
	position fixed
	z-index 1
	padding-top 100px
	left 0
	top 0
	width 100%
	height 100%
	overflow auto
	background-color rgb($black)
	background-color rgba($black,0.9)
	
	.close
		position absolute
		top 15px
		right 35px
		color #f1f1f1
		font-size 40px
		font-weight 700
		transition 0.3s
		
		&:hover
		&:focus
			color #bbb
			text-decoration none
			cursor pointer
	
	.modal-content
		margin auto
		display block
		width 80%
		max-width 700px
		
	#imgCaption
		margin auto
		display block
		width 80%
		max-width 700px
		text-align center
		color $grey-1
		padding 10px 0
		height 150px
		
	.modal-content
	#imgCaption
		-webkit-animation-name zoom
		-webkit-animation-duration 0.6s
		animation-name zoom
		animation-duration 0.6s
				
@keyframes zoom {
  from {
    transform scale(0)
  }
  to {
    transform scale(1)
  }
}