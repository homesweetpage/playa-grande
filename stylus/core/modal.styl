.gmodal
	display none
	position fixed
	z-index 4
	padding-top 100px
	left 0
	top 0
	width 100%
	height 100%
	overflow auto
	background-color rgb($black)
	background-color rgba($black,0.9)
	
	.gclose
		position absolute
		top 15px
		right 35px
		color #f1f1f1
		font-size 40px
		font-weight 700
		transition 0.3s
		
		&:hover
		&:focus
			color #bbb
			text-decoration none
			cursor pointer
	
	.modal-content
		margin auto
		display block
		width 80%
		max-width 700px
		
	#imgCaption
		margin auto
		display block
		width 80%
		max-width 700px
		text-align center
		color $grey-1
		padding 10px 0
		height 150px
		
	.modal-content
	#imgCaption
		animation-name zoomIn
		animation-duration 0.6s
		
.amodal
	display none
	position fixed
	z-index 4
	padding-top 100px
	padding-right 15px
	padding-left 15px
	left 0
	top 0
	width 100%
	height 100%
	overflow auto
	background-color rgb($black)
	background-color rgba($black,0.9)
	
	.bodyModal
		position relative
		margin auto
		display block
		width 80%
		max-width 700px
		color $grey-1
		background-color $grey-93
		border-radius 10px
		animation-name zoomIn
		animation-duration 0.6s
		
		.headerModal
			padding 20px 15px
			text-align center
			background-color $light-blue
			border-top-left-radius 10px
			border-top-right-radius 10px
	
			.aclose
				position absolute
				top 0px
				right 20px
				color #f1f1f1
				font-size 45px
				font-weight 700
				transition 0.3s
				
				&:hover
				&:focus
					color #bbb
					text-decoration none
					cursor pointer
					
			h3
				text-transform uppercase
				font-size 30px
				font-weight 700
				color $white
				
		.footerModal
			padding 25px 35px
			text-align justify
			border-bottom-left-radius 10px
			border-bottom-right-radius 10px
			
			p
				color $grey-sections
				font-weight 700