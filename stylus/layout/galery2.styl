#galery2
	background-color $orange
	padding 100px 0

	h1
		color $white

	.titulo-galery
		text-align center
		margin-bottom 50px

		a
			color $white
			font-weight 700
			font-size 28px
			text-decoration none
			transition all 0.3s
			text-transform uppercase

			&:hover
			&:focus
				color $light-blue

			&.active
				color $light-blue
				cursor default

	.foto-galery
		height 270px
		margin-bottom 30px

		.box-img
			height 100%
			width 100%
			overflow hidden
			border 1px solid $orange

			img
				height 100%
				width 100%
				transition all 0.3s
				cursor pointer

				&:hover
					transform scale(1.25)
