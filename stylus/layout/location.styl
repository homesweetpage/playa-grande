#location
	padding 100px 0

	h1
		color $blue

	h3
		text-transform uppercase
		font-weight 700
		color $blue
		margin-top 10px

	.playa-loc
		padding 7px 0 5px

		h5
			color $blue
			font-weight 700
			margin-bottom 5px

		span
			color $black
			display block

			i
				color $orange
				margin-right 10px
				width 12px

			a
				color $black
				text-decoration none
				cursor pointer
				transition all 0.3s

				&:hover
					color $orange
