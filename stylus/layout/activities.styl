#activities
	padding 100px 0
	background-color $orange
	
	.custom-padding
		padding 1px
	
	.box-actividades
		position relative
		width 100%
		height 100px
		border 2px solid $light-blue
		overflow hidden
		cursor pointer
		
		&:after
			content ""
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgba($black, .4)
		
		.box-top
			transition: all 0.5s ease
			position absolute
			top 0
			left 0
			background-color blue
			width 100%
			height 100%
			
			img
				width 100%
			
		.box-bot
			transition: all 0.5s ease
			position absolute
			top 96px
			left 0
			background-color green
			width 100%
			height 100%
			
		&:hover
			
			.box-top
				top -96px
				
			.box-bot
				top 0