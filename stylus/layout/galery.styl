#galery
	background-color $white
	padding 100px 0

	h1
		color $blue

	.box-hostel-titulo
		//overflow hidden
		margin-bottom 10px
		//height 60px

		.box-titulo
			width 100%
			height 60px
			background-color $light-blue
			border 1px solid $medium-blue
			cursor pointer
			transition all 0.3s

			h3
				color $white
				text-align center
				line-height 60px
				margin 0
				padding 0 20px
				font-weight 700
				text-transform uppercase

				i
					float right
					line-height 60px

			&:hover
			&:focus
				background-color $white

				h3
					color $orange

		.box-descripcion
			padding 0 10px
			background-color $white
			overflow hidden
			width 100%
			max-height 0
			animation-name outUp
			animation-fill-mode both
			animation-duration 1s
			animation-iteration-count 1

			p
				text-align justify
				color $grey-sections
				
	.descripcion-activa
		
		.box-descripcion
			border 1px solid $medium-blue
			border-top none
			padding 10px 10px 0
			animation-name inDown
			animation-fill-mode both
			animation-duration 1s
			animation-iteration-count 1

	.box-img
		box-shadow 0 0 5px $orange !important

	.pager

		.previous
		.next

			a
				margin 9.5px
				padding 0
				background-color transparent
				border none
				border-radius 0

				i
					color $orange
					transition all 0.3s

				&:hover

					i
						color $blue

		.pager-galery
			margin 0

			li

				a
					padding 0
					margin 0 2.5px
					border 1px solid $orange
					border-radius 0 !important
					width 50px
					height 50px

					img
						width 100%
						height 100%
