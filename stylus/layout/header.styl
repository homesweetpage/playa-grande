.flag
	width 23px

.flag-container
	
	a
		padding 15px 0px 10px 15px !important
		
.navbar
	height 80px
	background-color rgba($white, 0.9)
	background-image url('../images/nav2.png')
	background-size cover
	border-color transparent
	z-index 1
	
	.navbar-nav
		display inline-block
		float none
		vertical-align top
		
	.navbar-collapse
		text-align center
		
.collapse
	
	ul
		
		li
			padding-top 13px
			
.nav-item
	color $white !important
	font-size 20px
	text-shadow 0px 0px 3px $black
	font-family 'bebas_neueregular'
	
#logo
	padding 0px !important
	
	a
		padding 0px !important
		
		img
			width 10vw

.box-reserva
	position fixed
	width 300px
	padding 0 0 40px 0
	left 5vw
	top 23vh
	background-color rgba($white, 0.8)
	z-index 2
	
	.box-img
		width 100%
		padding 5% 15px 0 15px
		
	.box-check
		width 100%
		height 100px
		display block
		
		.check-in
			border-right solid 1px rgba($orange, 1)
			
		.check-in
		.check-out
			position relative
			
			&:hover
			&:focus
				
				.fecha
				.dia
					
					p
					span
						color $orange
						
			input
				position absolute
				cursor pointer
				top 0
				left 0
				width 100%
				height 100%
				opacity 0
				z-index 10
		
		span
			display block
			text-transform uppercase
			padding-bottom 3px
			font-size 12px
			font-weight 700
			margin-bottom 3px
			text-align center
			color $blue
			border-bottom solid 1px rgba($orange, 1)
			
		.fecha
		.dia
			display inline-block
			vertical-align middle
			width 50%
			float left
			padding 6px 5px
			
			p
				font-size 30px
				font-weight 700
				color $blue
				letter-spacing -1px
				line-height 27px
				text-align right
				margin-bottom 0
				transition all 0.3s
				
			span
				font-size 14px
				font-weight 700
				color $blue
				letter-spacing -1px
				line-height 13px
				text-align center
				border-bottom none
				padding-bottom 0
				margin-bottom 0
				transition all 0.3s
				
				&:first-child
					font-size 12px
					
	.box-botton
		position relative
		display block
		text-align center
		color $white
		text-transform uppercase
		cursor pointer
		border none
		margin 10px 15px 0 15px
		padding 6px 0
		font-size 18px
		font-weight 700
		transition all 0.3s
		background-color $orange
		
		&:hover
		&:focus
			background-color $blue
			color $white
				