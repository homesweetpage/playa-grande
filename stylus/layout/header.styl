.flag
	width 23px

.flag-container

	a
		padding 15px 0px 10px 15px !important

.navbar
	height 80px
	background-color rgba($white, 0.9)
	background-image url('../images/nav.png')
	background-size cover
	border-color transparent
	z-index 1

	.navbar-nav
		display inline-block
		float none
		vertical-align top

	.navbar-collapse
		text-align center

.collapse

	ul

		li
			padding-top 13px
			transition all 0.3s
			
			&:hover
			&:focus
				background-color rgba($white, 0.4) !important

.nav-item
	color $black !important
	font-size 20px
	text-shadow 0px 0px 3px $white
	font-family 'bebas_neueregular'
	transition all 0.3s

	&:hover
	&:focus
		color $orange !important

#logo
	padding 0px !important

	a
		padding 0px !important

		img
			width 10vw

.box-reserva
	position fixed
	width 300px
	padding 0 0 40px 0
	left 5vw
	top 23vh
	background-color rgba($white, 0.5)
	z-index 2
	border solid 1px rgba($blue, 0.5)
	visibility hidden
	text-align center
	display none
	
	.box-img
		width 100%
		padding 5% 15px 20px 15px

	.box-check
		width 100%
		height 100px
		padding 0 15px
		display block

		.check-in
			border-right solid 1px rgba($orange, 1)
			border-bottom-left-radius 5px
			border-top-left-radius 5px
			
		.check-out
			border-top-right-radius 5px
			border-bottom-right-radius 5px

		.check-in
		.check-out
			position relative
			background-color rgba($white, 0.4)
			padding 10px 15px

			&:hover
			&:focus

				.fecha
				.dia

					p
					span
						color $orange

			input
				position absolute
				cursor pointer
				top 0
				left 0
				width 100%
				height 100%
				opacity 0
				z-index 10

		span
			display block
			text-transform uppercase
			padding-bottom 3px
			font-size 12px
			font-weight 700
			margin-bottom 3px
			text-align center
			color $blue
			border-bottom solid 1px rgba($orange, 1)

		.fecha
		.dia
			display inline-block
			vertical-align middle
			width 50%
			float left
			padding 6px 5px

			p
				font-size 30px
				font-weight 700
				color $blue
				letter-spacing -1px
				line-height 27px
				text-align right
				margin-bottom 0
				transition all 0.3s

			span
				font-size 14px
				font-weight 700
				color $blue
				letter-spacing -1px
				line-height 13px
				text-align center
				border-bottom none
				padding-bottom 0
				margin-bottom 0
				transition all 0.3s

				&:first-child
					font-size 12px

	.box-botton
		position relative
		display inline-block
		text-align center
		color $white
		text-transform uppercase
		cursor pointer
		border none
		margin 10px 15px 0 15px
		padding 3px 30px
		font-size 15px
		font-weight 700
		transition all 0.3s
		background-color $orange
		border-radius 5px

		&:hover
		&:focus
			background-color $blue
			color $white

		input
			position absolute
			cursor pointer
			top 0
			left 0
			width 100%
			height 100%
			opacity 0
			z-index 10
