.flag
	width 23px

.flag-container

	a
		padding 15px 0px 10px 15px !important

.navbar
	height 80px
	background-color rgba($white, 0.9)
	background-image url('../images/nav.png')
	background-size cover
	border-color transparent
	z-index 3
	border-bottom 4px solid $orange

	.navbar-nav
		display inline-block
		float none
		vertical-align top

	.navbar-collapse
		text-align center

	.btn-reserva
		position absolute
		height 40px
		width 150px
		background-color $orange
		bottom -40px
		border-bottom-right-radius 20px
		border-bottom-left-radius 20px
		box-shadow 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important
		z-index 999

		.btn-border-top-left
			position absolute
			height 20px
			width 20px
			bottom 16px
			left -20px
			overflow hidden

			.border-circle-left
				width 100%
				height 100%
				background-color transparent
				border-top-right-radius 100%
				box-shadow 50px -50px 0px 50px $orange

			.border-shadow-left
				width 100%
				height 100%
				position absolute
				border-top-right-radius 100%
				box-shadow 0 -2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important
				background-color transparent
				bottom 0px
				left 0px

		.btn-border-top-right
			position absolute
			height 20px
			width 20px
			bottom 16px
			right -20px
			overflow hidden

			.border-circle-right
				width 100%
				height 100%
				background-color transparent
				border-top-left-radius 100%
				box-shadow 50px -50px 0px 50px $orange

			.border-shadow-right
				width 100%
				height 100%
				position absolute
				border-top-left-radius 100%
				box-shadow 0 -2px 4px 0 rgba(0,0,0,0.16),0 -2px 10px 0 rgba(0,0,0,0.12) !important
				background-color transparent
				bottom 0px
				left 0px

		button
			font-family 'bebas_neueregular'
			font-weight 700
			letter-spacing 2px
			width 100%
			height 100%
			background-color transparent
			color $white
			border none
			transition all 0.3s

			&:hover
			&:focus
				text-shadow 2px 2px $blue
				outline none

.navbar-toggle
	margin 21px 21px 21px 0
	border-color $orange !important
	transition all 0.3s

	span
		background-color $orange !important

	&:hover
	&:focus
		background-color rgba($white, 0.4) !important

.collapse
.collapsing

	ul

		li
			padding-top 18px
			transition all 0.3s
			border-bottom-right-radius 4px
			border-bottom-left-radius 4px

			&:hover
			&:focus
				background-color rgba($white, 0.4) !important

				a
					color $orange !important

			&.active
				background-color rgba($orange, 0.9)

				a
					background-color transparent !important
					color $white !important
					text-shadow 0px 0px 3px $black

				&:hover
				&:focus
					background-color rgba($orange, 0.9) !important

					a
						cursor default !important
						background-color transparent !important
						color $white !important
						text-shadow 0px 0px 3px $black

.nav-item
	color $black !important
	font-size 20px
	text-shadow 0px 0px 3px $white
	font-family 'bebas_neueregular'
	transition all 0.3s

#logo
	height 76px
	padding 5px 5px 0
	background-color rgba($white, 0.4) !important

	a

		img
			height 100%


.box-reserva
	position fixed
	width 300px
	top 76px
	background-color rgba($white, 0.75)
	z-index 2
	// border solid 4px $orange
	text-align center

	.box-img
		width 100%
		padding 45px 15px 10px 15px

	.box-check
		width 100%
		margin-bottom 10px
		padding 0 15px
		display inline-block

		.check-in
			border-right solid 1px rgba($orange, 1)
			border-bottom-left-radius 5px
			border-top-left-radius 5px

		.check-out
			border-top-right-radius 5px
			border-bottom-right-radius 5px

		.check-in
		.check-out
			position relative
			background-color rgba($white, 0.4)
			padding 10px 15px

			&:hover
			&:focus

				.fecha
				.dia

					p
					span
						color $orange

			input
				position absolute
				cursor pointer
				top 0
				left 0
				width 100%
				height 100%
				opacity 0
				z-index 10

		span
			display block
			text-transform uppercase
			padding-bottom 3px
			font-size 12px
			font-weight 700
			margin-bottom 3px
			text-align center
			color $blue
			border-bottom solid 1px rgba($orange, 1)

		.fecha
		.dia
			display inline-block
			vertical-align middle
			width 50%
			float left
			padding 6px 5px

			p
				font-size 30px
				font-weight 700
				color $blue
				letter-spacing -1px
				line-height 27px
				text-align right
				margin-bottom 0
				transition all 0.3s

			span
				font-size 14px
				font-weight 700
				color $blue
				letter-spacing -1px
				line-height 13px
				text-align center
				border-bottom none
				padding-bottom 0
				margin-bottom 0
				transition all 0.3s

				&:first-child
					font-size 12px

	.box-inputs
		padding 0 15px
		margin-bottom 10px

		.input-group
			margin-bottom 7.5px

			span
				padding 5px 10px
				border 1px solid $orange
				background-color rgba($white, 0.6)

				i
					color $blue
					width 16px

			input
			select
				height 28px
				background-color rgba($white, 0.8)
				border none
				color #999

			&.pull-left
			&.pull-right
				width calc((100% / 2) - (7.5px / 2))

	.box-botton
		position relative
		display inline-block
		text-align center
		color $white
		text-transform uppercase
		cursor pointer
		border none
		margin 2.5px 15px 15px 15px
		padding 3px 30px
		font-size 15px
		font-weight 700
		transition all 0.3s
		background-color $orange
		border-radius 5px

		&:hover
		&:focus
			background-color $blue
			color $white

		input
			position absolute
			cursor pointer
			top 0
			left 0
			width 100%
			height 100%
			opacity 0
			z-index 10

		&.btnError
			background-color $danger !important
			cursor default !important
			
			input
				display none !important

		&.btnSuccess
			background-color $success !important
			cursor default !important
			
			input
				display none !important